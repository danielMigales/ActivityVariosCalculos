<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonPerimetros"
        android:layout_width="307dp"
        android:layout_height="107dp"
        android:layout_marginTop="410dp"
        android:layout_marginBottom="214dp"
        android:backgroundTint="#FFAB00"
        android:fontFamily="casual"
        android:text="@string/perimetros"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonArea"
        android:layout_width="306dp"
        android:layout_height="103dp"
        android:layout_marginTop="197dp"
        android:layout_marginBottom="431dp"
        android:backgroundTint="#FFAB00"
        android:fontFamily="casual"
        android:text="@string/areas"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonVolumenes"
        android:layout_width="304dp"
        android:layout_height="90dp"
        android:layout_marginTop="308dp"
        android:layout_marginBottom="333dp"
        android:backgroundTint="#FFAB00"
        android:fontFamily="casual"
        android:text="@string/volumenes"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonPitagoras"
        android:layout_width="306dp"
        android:layout_height="103dp"
        android:layout_marginTop="530dp"
        android:layout_marginBottom="98dp"
        android:backgroundTint="#FFAB00"
        android:fontFamily="casual"
        android:text="@string/pitagoras"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:layout_marginTop="119dp"
        android:layout_marginBottom="568dp"
        android:fontFamily="casual"
        android:text="@string/calculadora_geometrica"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFAB00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBienvenida"
        android:layout_width="265dp"
        android:layout_height="28dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="655dp"
        android:text="@string/bienvenida"
        android:textAlignment="textEnd"
        android:textColor="#ACE20F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.803"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>